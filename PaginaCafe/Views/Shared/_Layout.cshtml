<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PaginaCafe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PaginaCafe.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">PaginaCafe</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#" onclick="irAlCarrito()">Ver carrito</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <!-- Sección de login -->
        <div id="loginSection" class="mb-3">
            <input type="text" id="inputUsuarioNombre" placeholder="Nombre usuario" class="form-control mb-2" style="max-width:300px;" />
            <input type="number" id="inputUsuarioId" placeholder="ID usuario" class="form-control mb-2" style="max-width:300px;" />
            <button class="btn btn-primary" onclick="login()">Iniciar sesión</button>
        </div>

        <div id="userInfo" class="mb-3" style="display:none;">
            Bienvenido, <span id="usuarioNombre"></span>!
            <button class="btn btn-outline-secondary btn-sm" onclick="logout()">Cerrar sesión</button>
        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PaginaCafe - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Script de login JS -->
    <script>
        function login() {
            const nombre = document.getElementById('inputUsuarioNombre').value;
            const id = document.getElementById('inputUsuarioId').value;

            if (nombre && id) {
                localStorage.setItem('usuarioNombre', nombre);
                localStorage.setItem('usuarioId', id);

                document.getElementById('loginSection').style.display = 'none';
                mostrarUsuario();
            } else {
                alert('Por favor, completá ambos campos.');
            }
        }

        function logout() {
            localStorage.removeItem('usuarioNombre');
            localStorage.removeItem('usuarioId');

            document.getElementById('loginSection').style.display = 'block';
            document.getElementById('userInfo').style.display = 'none';
        }

        function mostrarUsuario() {
            const nombre = localStorage.getItem('usuarioNombre');
            if (nombre) {
                document.getElementById('usuarioNombre').textContent = nombre;
                document.getElementById('userInfo').style.display = 'block';
                document.getElementById('loginSection').style.display = 'none';
            }
        }

        mostrarUsuario();
        <script>
            function irAlCarrito() {
                const usuarioId = localStorage.getItem("usuarioId");
                if (!usuarioId) {
                    alert("Debes iniciar sesión para ver el carrito.");
                    return;
                }
                window.location.href = "/Productos/ObtenerCarrito?usuarioId=" + usuarioId;
            }
    </script>

    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
